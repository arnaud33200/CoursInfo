#include<iostream>
using namespace std;

void premierdegre(float a, float b) {
  cout << "ensembe de solution pour : a.x+b=0 est : " << endl;
  if (b==0)
    cout << "x = 0" << endl;
  else
    cout << "x = " << -b/a << endl; }

int main() {
  float a, b;
 cout << "soit la fonction a.x+b avec : " << endl;
 cout << "- a= "; cin >> a;
 cout << "- b= "; cin >> b;
 cout << endl << endl;
 premierdegre(a,b);
 return 0; }
