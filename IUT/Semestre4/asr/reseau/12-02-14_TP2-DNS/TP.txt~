echo -e "\nauto eth0" >> /etc/network/interfaces
echo "iface eth0 inet static" >> /etc/network/interfaces
echo -e "\taddress 10.1.5.100" >> /etc/network/interfaces
echo -e "\tnetmask 255.255.255.0" >> /etc/network/interfaces

echo -e "\nauto eth0" >> /etc/network/interfaces
echo "iface eth0 inet static" >> /etc/network/interfaces
echo -e "\taddress 10.1.5.1" >> /etc/network/interfaces
echo -e "\tnetmask 255.255.255.0" >> /etc/network/interfaces

echo -e "\nauto eth0" >> /etc/network/interfaces
echo "iface eth0 inet static" >> /etc/network/interfaces
echo -e "\taddress 10.1.5.2" >> /etc/network/interfaces
echo -e "\tnetmask 255.255.255.0" >> /etc/network/interfaces
