
## machine B

ifconfig eth0 192.168.10.2 mask 255.255.255.0 up

route add default gw 192.168.10.1

~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~

## machine A :

ifconfig eth0 192.168.10.1 mask 255.255.255.0 up
ifconfig eth1 192.168.20.1 mask 255.255.255.0 up

route add -net 192.168.10.0 netmask 255.255.255.0 gw 192.168.10.1 dev eth0
route add -net 192.168.20.0 netmask 255.255.255.0 gw 192.168.20.1 dev eth1
route add default gw 192.168.20.3 dev eth1

~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~

## machine am

ifconfig eth0 192.168.20.2 mask 255.255.255.0 up

route add default gw 192.168.20.1
route add default gw 192.168.20.3

~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~

## machime stram

ifconfig eth0 192.168.20.3 mask 255.255.255.0 up
ifconfig eth1 192.168.30.1 mask 255.255.255.0 up

route add -net 192.168.20.0 netmask 255.255.255.0 gw 192.168.20.3 dev eth0
route add -net 192.168.30.0 netmask 255.255.255.0 gw 192.168.30.1 dev eth1
route add default gw 192.168.20.1 dev eth1

~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~

## machine gram

ifconfig eth0 192.168.30.2 mask 255.255.255.0 up

route add default gw 192.168.30.1
