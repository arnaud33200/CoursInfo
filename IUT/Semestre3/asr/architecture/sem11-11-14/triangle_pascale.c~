int triangle( int * f, int * s, int i, int j )
{
  if ( i == 1 )
    return 1;

  int a, b, c;

  for ( a=0; a<i; i++ )
    f[a] = 0;
  f[0] = 1;
  f[1] = 1;

  for ( b=0; b<j; b++ )
    {
      for ( a=1; a<i; a++ )
	  s[a] = f[a-1] + f[a];
      for ( c=0; c<i; c++ )
 	  f[c] = s[c];
    }
  return f[i];
}

int main()
{
	int first[5];
	int second[5];
	int resultat = triangle( first, second, 3, 4);
	
	return 0;
}
